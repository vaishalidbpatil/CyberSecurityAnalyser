@model IEnumerable<CyberSecurityAnalyser.Models.ErrorViewModel>
<div>
    <h4>Errors-Warnings</h4>
    
    <hr/>
    <dl class="dl-horizontal"></dl>
</div>
<p>
    @if (Model != null)
    {   <h4>@Model.Count() warnnings found!!</h4>
        <table class="table-bordered" cellspacing="0" width="100%" height="50%">
            <thead>
                <tr>
                    <th class="row">
                        Reource Location
                    </th>
                    
                    <th class="row">
                        Error Type
                    </th>
                   
                    <th class="row">
                        Error Message
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td align="left" class="row">
                            <a href="@item.ResourceLocation.Path">@item.ResourceLocation.Path</a>
                        </td>
                       
                        <td align="left">
                            @item.ErrorType
                        </td>
                       
                        <td align="left" class="row">
                            @item.ErrorMessage
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    { <div class="row"> No Errors/Warnings found!! </div>}
</p>